---
Language: Cpp
BasedOnStyle: LLVM

# Indentation
UseTab: Never
IndentWidth: 4
TabWidth: 4

# Braces
BreakBeforeBraces: Allman
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: true

# Whitespace
SpacesInAngles: true
SpacesInContainerLiterals: true
SpacesInParentheses: false
SpacesInSquareBrackets: false
AllowShortBlocksOnASingleLine: false
AllowShortFunctionsOnASingleLine: None

# Other
SortIncludes: false
Standard: Cpp11